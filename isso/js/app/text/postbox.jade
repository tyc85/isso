div(class='isso-postbox')
    div(class='form-wrapper')
        div(class='textarea-wrapper')
            div(class='textarea placeholder' contenteditable='true')
                = i18n('postbox-text')
        section(class='auth-section')
            p(class='input-wrapper')
                input(type='hidden' id='isso_author' name='author' placeholder=i18n('postbox-author')
                      value=author !== null ? '#{author}' : '', readonly)
            p(class='input-wrapper')
                input(type='hidden' id='isso_email' name='email' placeholder=i18n('postbox-email')
                      value=email != null ? '#{email}' : '', readonly)
            p(class='input-wrapper')
                input(type='hidden' id='isso_website' name='website' placeholder=i18n('postbox-website')
                      value=website != null ? '#{website}' : '')
            p(class='post-action')
                input(type='submit' value=i18n('postbox-submit'))
